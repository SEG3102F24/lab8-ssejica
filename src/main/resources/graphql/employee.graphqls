type Query {
  employees: [Employee]
  employeeById(id: ID!): Employee
}

type Mutation {
  addEmployee(employeeInput: EmployeeInput!): Employee!
  updateEmployee(id: ID!, employeeInput: EmployeeInput!): Employee!
  deleteEmployee(id: ID!): Boolean
}

type Employee {
  id: ID!
  name: String!
  dateOfBirth: String!
  city: String!
  salary: Float!
  gender: String
  email: String
}

input EmployeeInput {
  name: String!
  dateOfBirth: String!
  city: String!
  salary: Float!
  gender: String
  email: String
}

